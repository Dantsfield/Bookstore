<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">

        <div class="container">
            <div class="bookHeader">
                <h1>Henry's Bookstore</h1>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <h2 class="internalBanner">For INTERNAL Use Only</h2>
        @RenderBody()
        <hr />
        <footer style="text-align:center">
            <p>
                This page is created for educational purposes only.<br />
                No images or content will be published to the internet for public use.<br />
                Book cover images were retrieved from Barnes and Nobel.
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
